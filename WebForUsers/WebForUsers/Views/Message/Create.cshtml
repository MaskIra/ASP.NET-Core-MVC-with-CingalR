@model WebForUsers.Models.Message

<h4>Message</h4>
<hr />

<div class="container">
    <div class="form-group">
        <label for="userInput">User</label>
        <select id="userInput" class="form-control" asp-items="@(new SelectList(ViewBag.message, "Email", "Email"))" style="width: auto;"></select>
    </div>
    <div class="form-group">
        <label for="topicInput">Topic</label>
        <input type="text" id="topicInput" />
    </div>
    <div class="form-group">
        <label for="messageInput">Message</label>
        <input type="text" id="messageInput" />
    </div>
    <div class="form-group">
        <input type="button" id="sendButton" class="btn btn-outline-dark" value="Send Message" />
    </div>
    <div class="form-group" id="notification"></div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
